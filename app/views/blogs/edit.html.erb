<div class="continer">
  <div class="row my-3 ml-5">
  <%= form_with(model: @blog, local: true) do |form| %>

  <div class="title">
    <div class="form-tag">タイトル</div>
    <%= form.text_field :title %>
  </div>


  <div class="content">
    <div class="form-tag">内容</div>
    <%= form.text_field :content %>
  </div>

  <div class="mileage">
    <div class="form-tag">走行距離</div>
    <%= form.text_field :mileage %>
  </div>

  <div class="time">
    <div class="form-tag">時間</div>
    <%= form.datetime_select :start_time %>
  </div>


  <div class="submit">
    <%= form.submit %>
  </div>

  <% end %>
  </div>
</div>
